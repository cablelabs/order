{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "orderItem",
    "id": "orderItem",
    "description": "An item being ordered, typically a Product.",
    "type": "object",
    "required": [
        "orderItemReference",
        "quantity",
        "action",
        "product"
    ],
    "properties": {
        "orderItemReference": {
            "type": "string",
            "description": "A reference number that can be used to refer to this order item.",
            "maxlength": 4
        },
        "quantity": {
            "type": "integer",
            "description": "The quantity for the order item."
        },
        "action": {
            "type": "string",
            "enum": [
                "Install",
                "Change",
                "Disconnect",
                "No Change"
            ],
            "description": "The action to be taken for this order item (E.g. Install, Change)."
        },
        "product": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "accessEplOrderItemSpec.json#"
                },
                {
                    "$ref": "uniOrderItemSpec.json#"
                }
            ],
            "description": "An orderable representation of a product."
        }
    }
}